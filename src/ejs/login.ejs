<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Weekend Fun Project</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container" style="width: 400px">
      <form class="form-signin" action="/login" method="post">
        <h2 class="form-signin-heading">Log in with your password</h2>
        <p>
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
        </p>
        <p hidden>
            <input type="password" id="password" name="password" class="form-control" value="123">
        </p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
      <div id='help-message' class="alert alert-danger" role="alert" style="margin-top: 10px" hidden>
      </div>
    </div>
    <script>
      function getQueryVariable(variable) {
          var query = window.location.search.substring(1);
          var vars = query.split('&');
          for (var i = 0; i < vars.length; i++) {
              var pair = vars[i].split('=');
              if (decodeURIComponent(pair[0]) == variable) {
                  return decodeURIComponent(pair[1]);
              }
          }
          return ''
      }
      var helpElement = document.getElementById('help-message')
      var message = getQueryVariable('message');
      if (message) {
        helpElement.innerHTML = getQueryVariable('message')
        helpElement.hidden = false;
      }
    </script>
  </body>
</html>
